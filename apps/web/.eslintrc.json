{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": [
      "./tsconfig.json"
    ],
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "react/react-in-jsx-scope": "off",
    "@next/next/no-html-link-for-pages": "off"
  },
  "ignorePatterns": [
    "next.config.js"
  ],
  "overrides": [
    {
      "files": [
        "*.js",
        "*.cjs",
        "*.mjs"
      ],
      "parserOptions": {
        "project": null,
        "sourceType": "module"
      }
    }
  ]
}